<Window x:Class="Notepad_teht._31.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad_teht._31"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="MenuItem_Click"/>
                <MenuItem Header="_Print..." Click="MenuItem_Click_1"/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" Command="ApplicationCommands.Copy"/>
                <MenuItem Header="Paste" Command="ApplicationCommands.Paste"/>
                <MenuItem Header="F_ont" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>
        <Grid AutomationProperties.IsColumnHeader="True">
            <TextBox x:Name="textBox1" AcceptsReturn="True"/>
        </Grid>
    </DockPanel>
</Window>
